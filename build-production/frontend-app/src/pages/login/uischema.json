{
    "type": "Group",
    "label": "Login Form",
    "elements": [
        {
            "type": "Control",
            "scope": "#/properties/username"
        },
        {
            "type": "Control",
            "scope": "#/properties/password",
            "options": {
                "format": "password"
            }
        },
        {
            "type": "GridLayout",
            "scope": "#",
            "options": {
                "style": {
                    "direction": "row",
                    "spacing": 1,
                    "justifyContent": "flex-end"
                }
            },
            "elements": [
                {
                    "type": "ActionButton",
                    "elements": [
                        {
                            "type": "Typography",
                            "label": "Reset"
                        }
                    ],
                    "options": {
                        "onclick": {
                            "clearForm": true
                        }
                    }
                },
                {
                    "type": "ActionButton",
                    "elements": [
                        {
                            "type": "Typography",
                            "label": "Login"
                        }
                    ],
                    "options": {
                        "style": {
                            "variant": "contained"
                        },
                        "onclick": {
                            "route": {
                                "type": "link",
                                "uri": "/app1/home"
                            }
                        }
                    }
                }
            ]
        }
    ]
}